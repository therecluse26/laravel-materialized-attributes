{
    "name": "therecluse26/laravel-materialized-attributes",
    "description": "Persist computed Eloquent attributes in a JSON column for reuse across requests",
    "keywords": [
        "therecluse26",
        "laravel",
        "eloquent",
        "materialized",
        "attributes",
        "computed",
        "persistence"
    ],
    "homepage": "https://github.com/therecluse26/laravel-materialized-attributes",
    "license": "MIT",
    "authors": [
        {
            "name": "TheRecluse26",
            "email": "therecluse26@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8|^8.0",
        "orchestra/testbench": "^8.8|^9.0",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "TheRecluse26\\MaterializedAttributes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TheRecluse26\\MaterializedAttributes\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TheRecluse26\\MaterializedAttributes\\MaterializedAttributesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}